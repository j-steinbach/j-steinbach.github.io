---
const { title } = Astro.props;
import { Icon } from "astro-icon/components";
---

<!-- https://docs.astro.build/en/recipes/tailwind-rendered-markdown/ -->
<!-- <div class="h-2 bg-stone-700"></div> -->
<div class="flex flex-row gap-x-1 min-w-64 place-items-baseline bg-yellow-300">
  <a class="flex-none bg-stone-800 self-stretch" href="..">
    <Icon name="mdi:arrow-top-left" class="w-8 h-8 m-1" />
  </a>
  <h1
    class="text-balance text-4xl font-['cinzel'] font-bold leading-snug text-stone-800 text-center ml-2"
  >
    {title}
  </h1>
  <div class="max-w-10"></div>
</div>
<div class="h-2 bg-yellow-200 hidden sm:block" ></div>
